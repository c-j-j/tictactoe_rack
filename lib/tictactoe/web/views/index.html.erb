<!DOCTYPE html>
<html lang="en">

<head>
<meta charset="UTF-8">
<title></title>
<link rel="stylesheet" href="css/main.css">
<script type="text/javascript" src="javascripts/vendor/jquery-2.1.3.min.js"></script>
<script type="text/javascript" src="javascripts/vendor/jquery.cookie.js"></script>
<script type="text/javascript" src="javascripts/json_response_handler.js"></script>
<script type="text/javascript" src="javascripts/ajax_sender.js"></script>
<script type="text/javascript" src="javascripts/game_client.js"></script>
<script type="text/javascript" src="javascripts/storage.js"></script>
<script type="text/javascript" src="javascripts/cookie_storage.js"></script>
<script type="text/javascript" src="javascripts/game_setup.js"></script>
<script type="text/javascript" src="javascripts/main.js"></script>
</head>

<body>
<section>
  <heading>
  <h1>TicTacToe</h1>
  </heading>

  <form action="new_game" method="GET">
    <div>
      <label for="GameType">Select Game Type</label>

      <select name="game_type" id="GameType">
        <% for game_option in game_options %>
          <option value="<%= game_option.game_type %>">
        <%= game_option.game_description %>
        </option>
      <% end %>
      </select>
    </div>

    <div>
      <label for="BoardSize">Select Board Size (number of rows)</label>
      <select name="board_size" id="BoardSize">
        <% for board_size in board_sizes %>
          <option value="<%= board_size %>">
        <%= board_size %>
        </option>
      <% end %>
      </select>
    </div>

    <input type="submit" class="btn btn-default" onclick="gameSetup.setup();" value="Play New Game">

  </form>
</section>
</body>

</html>

